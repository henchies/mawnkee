<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .panelTitle {
      font-weight: bold;
    }
    
    .panel {
      margin-top: 1em;
    }
  </ui:style>

  <g:FlowPanel>
    <g:Label ui:field="greetingMessageLabel" />
    <g:FlowPanel ui:field="dictionaryPanel" styleName="{style.panel}">
      <g:Label styleName="{style.panelTitle}">Dictionary</g:Label>
      <g:Label ui:field="dictionaryMessageLabel" />
    </g:FlowPanel>
    <g:FlowPanel ui:field="practicePanel" styleName="{style.panel}">
      <g:Label styleName="{style.panelTitle}">Practice</g:Label>
      <g:Label ui:field="practiceMessageLabel" />
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
